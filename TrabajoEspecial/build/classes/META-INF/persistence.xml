<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="TrabajoEspecial-ApacheDerby">
		<description>Contexto de persistencia con Apache Derby, Hibernate y entidades JPA definidas mediante anotaciones</description>
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider> -->
		<!-- <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider> -->
		
		<class>com.tudai.practico2ejemplo.entidades.Usuario</class>
		<class>com.tudai.practico2ejemplo.entidades.Lugar</class>
		<class>com.tudai.practico2ejemplo.entidades.Tematica</class>
		<class>com.tudai.practico2ejemplo.entidades.Trabajo</class>
		<class>com.tudai.practico2ejemplo.entidades.TipoConocimiento</class>
		<class>com.tudai.practico2ejemplo.entidades.TipoTrabajo</class>

		<properties>
			<!-- Propiedades de configuracion de JDBC para Apache Derby -->
			<!-- <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:CACIC2018DB;create=true" />
			 -->
			<!-- Propieadades de configuracion de JDBC para MySQL -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/CACIC2018" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			
			<!-- Propiedad para la generacion automatica del esquema de base de datos -->
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> -->
			<!-- <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/> -->
		</properties>
	</persistence-unit>

</persistence>
